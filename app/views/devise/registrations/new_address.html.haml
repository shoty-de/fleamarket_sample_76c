%h2 Address
= form_for(@address) do |f|
  = render "devise/shared/error_messages", resource: @address
  .field
    = f.label :post_family_name
    %br/
    = f.text_field :post_family_name
  .field
    = f.label :post_family_name_kana
    %br/
    = f.text_field :post_family_name_kana
  .field
    = f.label :post_first_name
    %br/
    = f.text_field :post_first_name
  .field
    = f.label :post_first_name_kana
    %br/
    = f.text_field :post_first_name_kana
  .field
    = f.label :postal_code
    %br/
    = f.text_field :postal_code
  .field
    = f.label :prefecture_id
    %br/
    = f.text_field :prefecture_id
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :address
    %br/
    = f.text_field :address
  .field
    = f.label :building
    %br/
    = f.text_field :building
  .field
    = f.label :phone_number
    %br/
    = f.text_field :phone_number
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
